const base = import.meta.env.BASE_URL;
---

<header class="topbar" id="top">
  <div class="container topbar__row">
    <a class="brand" href={base} aria-label="На головну">
      <img class="brand__logo" src={`${base}img/logo.png`} alt="TeaCha" />
      <span class="brand__word"
        ><span class="tea">Tea</span><span class="cha">Cha</span></span
      >
    </a>

    <nav class="nav" aria-label="Навігація">
      <button
        class="nav__burger"
        data-burger
        aria-label="Відкрити меню"
        aria-expanded="false"
      >
        <span></span><span></span><span></span>
      </button>

      <div class="nav__right" data-nav-panel>
        <div class="nav__social">
          <a
            class="socialBtn"
            href="https://www.instagram.com/teacha_english_chinese?igsh=MW15MzJpdmVqemRidg=="
            target="_blank"
            rel="noopener"
            aria-label="Instagram"
          >
            <img src={`${base}img/ig.png`} alt="" />
          </a>
          <a
            class="socialBtn"
            href="https://www.tiktok.com/@school.teacha?_r=1&_t=ZM-92xtLcPpblU"
            target="_blank"
            rel="noopener"
            aria-label="TikTok"
          >
            <img src={`${base}img/tiktok.png`} alt="" />
          </a>
        </div>

        <div class="nav__links">
          <a class="pill" href={`${base}english`}>Англійська</a>
          <a class="pill" href={`${base}chinese`}>Китайська</a>
          <a class="pill" href={`${base}corporate`}>Корпоративне навчання</a>
          <a class="pill" href={`${base}price`}>Ціна</a>
          <a class="pill" href={`${base}products`}>Продукція</a>
          <a class="pill" href={`${base}about`}>Про нас</a>
        </div>
      </div>
    </nav>
  </div>
</header>
